@page "/tnid-buyer"
@rendermode InteractiveServer

<PageTitle>Tnid Buyer Page</PageTitle>
@* * send payment button *@
@* * show buyer/seller info *@
@* * show payment info *@

<section id="send-payment" class="mb-4">
    <button class="btn btn-lg btn-primary button_glow">Send Payment of <b>$800.00</b></button>
</section>

<section id="buyer-seller-section" class="mb-4">
    <div id="buyer-seller-info" class="mb-2 fs-5">
        <label class="align-top d-block fs-3">Buyer Info</label>

        <div class="p-2 w-25 m-1 border border-1 border-primary mb-2" id="buyer-info">
            <span class="d-block">Buyer Name: <b>@buyerFullName</b></span>
            <span class="d-block">Email: <b>buyer_email@gmail.com</b></span>
            <span class="d-block">Other Info: {Other Info}</span>
        </div>

        <label class="align-top d-block fs-3">Seller Info</label>

        <div class="p-2 w-25 m-1 border border-1 border-primary" id="seller-info">
            <span class="d-block">Seller Name: <b>@sellerFullName</b></span>
            <span class="d-block">Email: <b>seller_email@gmail.com</b></span>
            <span class="d-block">Other Info: {Other Info}</span>
        </div>
    </div>
</section>

@* You are about to pay {Seller Name} for {Product (Minecraft Cape Account)}*@
@* You are going to pay with ***********1234 Exp 12/27 *@
@* Payment will be held in Escrow until digital goods are added/verified. *@
@* Digital goods will be delivered to {accountbuyer@gmail.com} *@
@* Change delivery settings button *@
@* Change payment settings button*@
@* Contact seller *@

<section id="purchase-info" class="p-2 w-50 m-1 border border-1 border-primary mb-2 fs-4">
    <div>
        <span class="d-block">You are about to pay <b>@sellerFullName</b> the amount of <b>$800.00</b> for <b>Minecraft Cape Account</b></span>
        <span class="d-block">You are going to pay with card ending in <b>xxxxxxxxxxxx1234</b></span>
        <span class="d-block">Payment will be held in Escrow until digital goods are added/verified.</span>
        <span class="d-block">Digital goods will be delivered to <b>account_buyer@gmail.com</b></span>
    </div>
</section>

<section id="functionality-buttons">
    <button class="btn btn-lg btn-outline-primary">Change Delivery Settings</button>
    <button class="btn btn-lg btn-outline-primary">Change Payment Settings</button>
    <button class="btn btn-lg btn-outline-primary">Contact Seller</button>
</section>

@code {
    private string buyerFullName = Shared.BuyerFullName;
    private string sellerFullName = Shared.SellerFullName;
}